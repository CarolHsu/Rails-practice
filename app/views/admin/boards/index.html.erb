<h1>Forum HomePage</h1>
<table>
   <tr>
      <th>ID</th><th>Issue</th><th>management</th>
   </tr>
   <% @boards.each do |board| %>
      <tr>
         <td><%= board.id %></td>
         <td><%= link_to board.name, board_path(board) %></td>
         <td>
            <%= link_to 'Edit', edit_board_path(board) %>
            <%= link_to 'Delete', board_path(board), :confirm => 'Are you sure?', :method => :delete %>
         </td>
      </tr>
   <% end %>
</table>

<%= link_to 'New board', new_board_path %>
