<h1><%= @board.name %></h1>

<table>
   <tr>
      <th>Title</th>
      <th>Content</th>
      <th></th>
   </tr>
   <% @posts.each do |post| %>
      <tr>
         <td><%= link_to post.title, board_post_path(@board, post) %></td>
         <td><%= post.content %></td>
         <td>
            <% if current_user && current_user.id == post.user_id %>
               <%= link_to 'Edit', edit_board_post_path(@board, post) %>
               <%= link_to 'Delete', board_post_path(@board, post), :confirm => 'Are you sure', :method => :delete %>
            <% end %>
         </td>
      </tr>
   <% end %>
</table>

<%= link_to 'Back to boards', boards_path %> | <%= link_to 'New post', new_board_post_path(@board) %>
